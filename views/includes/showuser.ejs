<% layout('layouts/boilerplate') %>

<style>
  /* === GLOBAL STYLES === */
  body {
    background-color: #f0f2f5;
    font-family: "Segoe UI", sans-serif;
    margin: 0;
    padding: 0;
  }

  .main-content {
    background-color: #f0f2f5;
    min-height: 100vh;
    padding: 2rem 2rem 2rem 2rem;
  }

  /* === DASHBOARD HEADER === */
  .dashboard-header {
    background-color: #003366;
    color: #fff;
    border-radius: 12px;
    padding: 2rem;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
  }

  .dashboard-header h2 {
    font-weight: 700;
    font-size: 1.8rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .dashboard-header p {
    margin: 0.3rem 0 0;
    font-size: 1rem;
  }

  /* === CARD === */
  .videos-card {
    background-color: #fff;
    border-radius: 12px;
    margin-top: 2rem;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
    overflow: hidden;
  }

  /* === CARD HEADER === */
  .videos-header {
    background-color: #003366;
    color: #fff;
    padding: 1.5rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    border-bottom: 2px solid #002855;
    border-radius: 12px 12px 0 0;
    box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1);
  }

  .videos-header h4 {
    margin: 0;
    font-weight: 600;
    font-size: 1.3rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  /* === SEARCH + REFRESH === */
  .videos-header .d-flex {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    align-items: center;
  }

  .search-input {
    border: none;
    border-radius: 8px;
    padding: 0.6rem 1rem;
    font-size: 0.95rem;
    min-width: 200px;
    flex-grow: 1;
    background-color: #ffffff;
    transition: 0.3s ease;
  }

  .search-input:focus {
    outline: none;
    box-shadow: 0 0 0 2px rgba(26, 92, 255, 0.3);
  }

  .btn-outline-secondary {
    border: none;
    color: #003366;
    background-color: #fff;
    font-weight: 600;
    border-radius: 8px;
    padding: 0.45rem 1rem;
    display: flex;
    align-items: center;
    gap: 0.3rem;
    transition: 0.3s;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  }

  .btn-outline-secondary:hover {
    background-color: #e8f0ff;
  }

  /* === TABLE SECTION === */
  .table-section {
    background-color: #fff;
    border-radius: 0 0 12px 12px;
    padding: 1.5rem 2rem;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
    overflow-x: auto;
  }

  table {
    width: 100%;
    border-collapse: collapse;
    font-size: 0.95rem;
    min-width: 600px;
  }

  thead {
    background-color: #f4f6f8;
  }

  th {
    font-weight: 600;
    color: #333;
    text-align: left;
    padding: 1rem 1.2rem;
    border-bottom: 2px solid #e5e7eb;
    white-space: nowrap;
  }

  td {
    padding: 0.9rem 1.2rem;
    border-bottom: 1px solid #eee;
    vertical-align: middle;
  }

  tr {
    transition: 0.2s ease;
  }

  tr:hover {
    background-color: #f9fafc;
    transform: scale(1.01);
  }

  .btn-delete {
    background-color: #dc3545;
    border: none;
    border-radius: 6px;
    color: #fff;
    font-weight: 500;
    padding: 0.45rem 0.9rem;
    transition: 0.2s;
  }

  .btn-delete:hover {
    background-color: #b52b38;
    transform: scale(1.05);
  }

  /* === RESPONSIVE STYLES === */
  @media (max-width: 1024px) {
    .dashboard-header {
      padding: 1.5rem;
      text-align: center;
    }

    .videos-header {
      padding: 1rem 1.2rem;
      text-align: center;
      flex-direction: column;
      gap: 0.7rem;
    }

    .videos-header .d-flex {
      width: 100%;
      justify-content: center;
      gap: 0.5rem;
    }

    .search-input {
      width: 100%;
      flex-grow: 1;
      font-size: 0.9rem;
      padding: 0.5rem 0.8rem;
    }

    .btn-outline-secondary {
      width: 100%;
      font-size: 0.9rem;
    }

    .table-section {
      padding: 1rem;
      border-radius: 0 0 10px 10px;
    }

    th, td {
      padding: 0.7rem 0.9rem;
      font-size: 0.88rem;
    }

    table {
      min-width: 100%;
    }
  }

  @media (max-width: 600px) {
    .dashboard-header h2 {
      font-size: 1.5rem;
      justify-content: center;
    }

    .videos-header h4 {
      font-size: 1.1rem;
      justify-content: center;
    }

    .btn-delete {
      padding: 0.35rem 0.6rem;
      font-size: 0.8rem;
    }

    th, td {
      font-size: 0.8rem;
      padding: 0.6rem 0.8rem;
    }
  }

  @media (max-width: 400px) {
    .dashboard-header {
      padding: 1rem;
    }

    .videos-card {
      margin: 0.5rem 0;
    }

    .videos-header {
      padding: 0.8rem 1rem;
    }

    .table-section {
      padding: 0.8rem;
    }

    th, td {
      padding: 0.5rem 0.6rem;
    }

    .btn-outline-secondary {
      padding: 0.35rem 0.5rem;
      font-size: 0.8rem;
    }
  }

  /* ICON SPACING FIX */
  h2 i, h4 i {
    margin-right: 6px;
    vertical-align: middle;
  }
</style>

<div class="d-flex flex-column">
  <main class="main-content flex-grow-1">
    <!-- DASHBOARD HEADER -->
    <div class="dashboard-header d-flex justify-content-between align-items-center flex-wrap mb-4">
      <div>
        <h2><i class="fa-solid fa-user-graduate"></i> See Users</h2>
        <p>View all registered students below.</p>
      </div>
    </div>

    <!-- USERS CARD -->
    <div class="videos-card">
      <div class="videos-header">
        <h4><i class="fa-solid fa-users"></i> Registered Users</h4>
        <div class="d-flex">
          <input type="text" id="userSearch" class="search-input" placeholder="ðŸ” Name or enrollment id..." />
          <button onclick="location.reload()" class="btn btn-outline-secondary">
            <i class="fa-solid fa-arrows-rotate"></i> Refresh
          </button>
        </div>
      </div>

      <div class="table-section">
        <div class="table-responsive">
          <table class="table align-middle" id="usersTable">
            <thead>
              <tr>
                <th>Name</th>
                <th>Batch</th>
                <th>College</th>
                <th>Enrollment ID</th>
                <th>Password (Decrypted)</th>
                <th>Delete</th>
              </tr>
            </thead>
            <tbody>
              <% if (users && users.length > 0) { %>
                <% users.forEach(user => { %>
                  <tr>
                    <td><%= user.name %></td>
                    <td><%= user.batch %></td>
                    <td><%= user.collegeName %></td>
                    <td><%= user.enrollmentId %></td>
                    <td><%= user.plaintextPassword %></td>
                    <td>
                      <form action="/deleteuser/<%= user._id %>" method="POST" style="display:inline;">
                        <button type="submit" class="btn btn-delete">
                          <i class="fa-solid fa-trash"></i> Delete
                        </button>
                      </form>
                    </td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="6" class="text-center text-muted">No registered users found.</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </main>
</div>


<script>
// ðŸ” Client-side search
document.getElementById("userSearch").addEventListener("input", function () {
  const query = this.value.toLowerCase().trim();
  const rows = document.querySelectorAll("#usersTable tbody tr");

  rows.forEach(row => {
    const name = row.querySelector("td:nth-child(1)")?.textContent.toLowerCase() || "";
    const enrollmentId = row.querySelector("td:nth-child(4)")?.textContent.toLowerCase() || "";

    // âœ… Match by name OR enrollment ID
    if (name.includes(query) || enrollmentId.includes(query)) {
      row.style.display = "";
    } else {
      row.style.display = "none";
    }
  });
});


  // Sidebar toggle
  document.addEventListener("DOMContentLoaded", () => {
    const toggleBtn = document.getElementById("toggle-btn");
    const sidebar = document.getElementById("sidebar");
    const main = document.querySelector(".main-wrapper");
    if (toggleBtn && sidebar && main) {
      toggleBtn.addEventListener("click", () => {
        sidebar.classList.toggle("active");
        main.classList.toggle("shifted");
      });
    } else {
      console.warn("Sidebar toggle not initialized â€” element(s) missing");
    }
  });
</script>
